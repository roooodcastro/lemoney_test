<div class="row justify-content-center">
  <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4">
    <%= title t('.sign_in') %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                 html: { class: 'login-form' }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'sr-only' %>
        <%= f.email_field :email, autocomplete: 'email', required: true,
                          class: 'form-control email', placeholder: 'Email' %>
        <%= f.label :password, class: 'sr-only' %>
        <%= f.password_field :password, autocomplete: 'off', required: true,
                             class: 'form-control password',
                             placeholder: 'Password' %>
      </div>

      <div class="custom-control custom-checkbox">
        <%= f.check_box :remember_me, class: 'custom-control-input' %>
        <%= f.label :remember_me, class: 'custom-control-label' %>
      </div>

      <div class="form-group mt-3">
        <%= f.button t('.sign_in'), class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <div class="btn-group d-flex">
      <%= render partial: 'devise/shared/links', locals: { full: true } %>
    </div>
  </div>
</div>

