<div class="card">
  <div class="card-header"><h4 class="my-0">Existing Offers</h4></div>
  <% if offers.present? %>
    <table class="table table-condensed table-bordered table-hover">
      <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>URL</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% offers.each do |offer| %>
        <tr>
          <td><%= offer.id %></td>
          <td><%= offer.advertiser_name %></td>
          <td><%= offer.url %></td>
          <td><%= offer_status(offer) %></td>
          <td>
            <div class="btn-group">
              <%= link_to 'Edit', edit_offer_path(offer), class: 'btn' %>
              <%= link_to 'Disable', edit_offer_path(offer), class: 'btn btn-warning' %>
              <%= link_to 'Destroy', offer, method: :delete, class: 'btn btn-danger' %>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="card-body">
      <div class="alert alert-warning">
        There are currently no offers created
      </div>
    </div>
  <% end %>
</div>
